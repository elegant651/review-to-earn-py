{
  "manifest_version": 3,
  "name": "Review-to-Earn (PYUSD)",
  "version": "0.1.0",
  "description": "Reward helpful product reviews with on-device scoring and PYUSD rewards.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.etsy.com/*",
    "https://*.ebay.com/*",
    "https://shopping.naver.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "Review-to-Earn"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.etsy.com/*",
        "https://*.ebay.com/*",
        "https://shopping.naver.com/*"
      ],
      "js": [
        "src/content/content.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/ui/sidepanel.html"
  },
  "options_page": "src/ui/options.html"
}